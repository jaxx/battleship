{
    "compilerOptions": {
        "target": "es5",
        "jsx": "preserve",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "outDir": "./dist/",
        "declaration": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "wwwroot"
    ],
    "include": [
        "src/**/*"
    ]
}